root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,cpp,h,hpp,cc,java}]
indent_size = tab
tab_width = 4
max_line_length = 79

[*.{css,js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 80

[*{html}]
indent_style = space
indent_size = 2

[*.{yml,ymal}]
indent_style = space
indent_size = 2

[*.{md,markdown}]
indent_style = space
indent_size = 4

[*{json}]
indent_style = space
indent_size = 2
